<!-- app/views/users/new.html.erb -->

<h1>Signup!</h1>
<%= form_for :user, url: '/users' do |f| %>

  <div><label class="lbl">First Name: </label><%= f.text_field :first_name %></div>
  <div><label class="lbl">Last Name: </label><%= f.text_field :last_name %></div>
  <div><label class="lbl">Email: </label><%= f.text_field :email %></div>
  <div><label class="lbl">Password: </label><%= f.password_field :password %></div>
  <div><label class="lbl">Password Confirmation: </label><%= f.password_field :password_confirmation %></div>
  <div><%= f.submit "Submit" %> <%= link_to 'Back', products_path %></div>

<% end %>
